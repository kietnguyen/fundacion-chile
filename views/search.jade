.col-md-offset-3.col-md-6
  .panel.panel-default
    .panel-heading
      .panel-title
        i.fa.fa-edit.fa-fw
        | &nbsp; Filter contact
    .panel-body
      form(method="post", action="/search")
        .input-group
          span.input-group-addon: i.fa.fa-calendar-o.fa-fw
          select.input-year.form-control(name="year")

        .input-group
          span.input-group-addon: i.fa.fa-calendar.fa-fw
          select.input-month.form-control(name="month")
            option(value="") Select a month

        .input-group
          span.input-group-addon: i.fa.fa-building-o.fa-fw
          select.input-org.form-control(name="org")
            option(value="") Select an organization

        .input-group
          span.input-group-addon: i.fa.fa-map-marker.fa-fw
          select.input-region.form-control(name="region")
            option(value="") Select a region

script(src="/js/search.js")



